{
  "name": "vzlogger to MQTT Gateway",
  "version": "0.9.2",
  "slug": "vzlogger2mqtt",
  "description": "vzlogger - Read your Smart Meter",
  "url": "https://github.com/m-reuter/ha-addons/tree/master/vzlogger2mqtt",
  "arch": ["armhf", "armv7", "aarch64", "amd64", "i386"],
  "_arch": ["armv7"],
  "startup": "system",
  "boot": "auto",
  "uart": true,
  "options": {
    "verbosity": 3,
    "mqtt_broker": "127.0.0.1",
    "mqtt_port": 1883,
    "mqtt_username": "",
    "mqtt_password": "",
    "mqtt_topic": "vzlogger/data",
    "mqtt_timestamp": "false",
    "meter1_protocol": "sml",
    "meter1_parity": "8N1",
    "meter1_baudrate": 9600,
    "meter1_baudrate_read": 9600,
    "meter1_pullseq": "",
    "meter1_ackseq": "",
    "meter1_aggtime": 10,
    "meter1_interval": 0,
    "meter1_read_timeout": 10,
    "meter1_device": "",
    "meter1_channels" : [
      { "identifier": "1-0:16.7.0*255", "aggmode": "avg" },
      { "identifier": "1-0:1.8.0*255", "aggmode": "max" }
    ],
    "meter2_protocol": "sml",
    "meter2_parity": "8N1",
    "meter2_baudrate": 9600,
    "meter2_baudrate_read": 9600,
    "meter2_pullseq": "",
    "meter2_ackseq": "",
    "meter2_aggtime": 10,
    "meter2_interval": 0,
    "meter2_read_timeout": 10,
    "meter2_device": "",
    "meter2_channels" : [
      { "identifier": "1-0:16.7.0*255", "aggmode": "avg" },
      { "identifier": "1-0:1.8.0*255", "aggmode": "max" }
    ]
  },
  "schema": {
    "verbosity": "int",
    "mqtt_broker": "str",
    "mqtt_port": "port",
    "mqtt_username": "str?",
    "mqtt_password": "password?",
    "mqtt_topic": "str",
    "mqtt_timestamp":"bool",
    "meter1_protocol": "str",
    "meter1_parity": "str",
    "meter1_baudrate": "int",
    "meter1_baudrate_read": "int",
    "meter1_pullseq": "str?",
    "meter1_ackseq": "str?",
    "meter1_aggtime": "int",
    "meter1_interval": "int",
    "meter1_read_timeout": "int",
    "meter1_device": "str",
    "meter1_channels" : [
      { "identifier": "str", "aggmode": "str" }
    ],
    "meter2_protocol": "str",
    "meter2_parity": "str?",
    "meter2_baudrate": "int?",
    "meter2_baudrate_read": "int",
    "meter2_pullseq": "str?",
    "meter2_ackseq": "str?",
    "meter2_aggtime": "int?",
    "meter2_interval": "int?",
    "meter2_read_timeout": "int",
    "meter2_device": "str?",
    "meter2_channels" : [
      { "identifier": "str", "aggmode": "str" }
    ]
  },
  "image": "mreuter/{arch}-vzlogger2mqtt"
}
